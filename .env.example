# Yahoo Mail credentials (required)
YAHOO_EMAIL=yourname@yahoo.com
YAHOO_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# IMAP settings
IMAP_HOST=imap.mail.yahoo.com
IMAP_PORT=993
MAILBOX=INBOX
DEST_FOLDER=Promotional
TRASH_FOLDER=Bulk Mail

# Interactive mode (default: true)
# Set to false to run automatically without confirmation
INTERACTIVE=true

# SQLite database location
# Docker: use /data/state.sqlite
# Local: use ./data/state.sqlite
SQLITE_PATH=./data/state.sqlite

# LLM Configuration
# Use openrouter/ prefix for OpenRouter models
LLM_MODEL=openrouter/google/gemini-2.5-flash

# Set your OpenRouter API key as environment variable:
# (or use: llm keys set openrouter)
OPENROUTER_KEY=sk-or-...

# Rspamd settings
# Docker: use http://rspamd:11333/checkv2
# Local: use http://127.0.0.1:11333/checkv2
RSPAMD_URL=http://127.0.0.1:11333/checkv2
RSPAMD_SPAM_SCORE=6.0
RSPAMD_TRASH_SCORE=7.0

# Historical learning settings
# How much influence past actions have (0.0 = disabled, 1.0 = strong influence)
HISTORY_WEIGHT=0.3
# Minimum past emails from a domain before using history
HISTORY_MIN_SAMPLES=3
